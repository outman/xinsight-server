{
    "name": "outman/xinsight-server",
    "description": "Xhprof Web application",
    "keywords": [
        "xhprof",
        "xinsight"
    ],
    "homepage": "https://github.com/outman/xinsight-server",
    "license": "MIT",
    "authors": [
        {
            "name": "outman",
            "email": "pochonlee@gmail.com",
            "homepage": "https://github.com/outman"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "ext-mongodb": "*",
        "firebase/php-jwt": "^6.10",
        "mongodb/mongodb": "^1.19",
        "monolog/monolog": "^3.7",
        "php-di/php-di": "^7.0",
        "slim/psr7": "^1.7",
        "slim/slim": "^4.14",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "jangregor/phpstan-prophecy": "^1.0.2",
        "phpspec/prophecy-phpunit": "^2.2",
        "phpstan/extension-installer": "^1.4.3",
        "phpstan/phpstan": "^1.12",
        "phpunit/phpunit": "^11.3.1",
        "squizlabs/php_codesniffer": "^3.10"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        },
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S 0.0.0.0:8080 -t public",
        "test": "phpunit"
    }
}
